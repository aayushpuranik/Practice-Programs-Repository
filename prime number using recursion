//prime number using recursion
#include<stdio.h>
int prime(int,int);
int main()
{
	int i,j,k;
	printf("Enter a number:");
	scanf("%d",&i);
	j=prime(i,i/2);
	if(j==1) printf("%d is prime",i);
	else printf("Not prime");
	return 0;
}

int prime(int n,int j)
{
	if(j==1) return 1;
	else
	{
		if(n%j==0)
		{
			return 0;
		}
		else
		{
			prime(n,j-1);
		}
	}
}
